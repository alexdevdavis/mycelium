{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DB_HOST", "DB_PORT", "DB_USER", "DB_PASS", "DB_NAME"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DB_HOST", "DB_PORT", "DB_USER", "DB_PASS", "DB_NAME"]
    },
    "test": {
      "cache": false,
      "env": ["DB_HOST", "DB_PORT", "DB_USER", "DB_PASS", "DB_NAME"]
    },
    "api#dev": {
      "dependsOn": ["postgres-dev#dev"],
      "cache": false,
      "persistent": true
    },
    "api#test": {
      "dependsOn": ["postgres-dev#test"],
      "cache": false
    }
  }
}
